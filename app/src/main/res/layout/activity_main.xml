<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androidyuan.rxcomponentsample.MainActivity">

    <Button android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/view_rxpermision"
             android:text="permission"

             android:background="#ee6666" android:layout_margin="10dp"/>
    <Button android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/view_rxbroadcst"
             android:text="broadcast"
             android:background="#66ee66" android:layout_margin="10dp"/>

    <Button android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/view_rxbus"
             android:text="rxbus"
             android:background="#3333ee" android:layout_margin="10dp"/>


</LinearLayout>
